<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="letterStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/whiteButton</item>
    </style>

    <style name="whiteButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="teamhistory_header">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="teamhistory">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/ThemeButton</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#2E4B91</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeButton" parent="FullscreenTheme">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="bar_clue" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">#1A9FCC</item>
        <item name="colorButtonNormal">#1A9FCC</item>
    </style>

    <style name="bar_menu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">#1C76CC</item>
        <item name="colorButtonNormal">#1C76CC</item>
    </style>


    <style name="barButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="bar_item">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/main_button_margin_sides</item>
        <item name="android:layout_marginStart">@dimen/main_button_margin_sides</item>
        <item name="android:background">@drawable/button_main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="share_header">
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="itemNation">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="optionsTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="optionsOption">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
